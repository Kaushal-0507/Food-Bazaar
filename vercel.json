{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "output": "static"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/restaurants",
      "dest": "/api/restaurants"
    },
    {
      "src": "/api/menu",
      "dest": "/api/menu"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
